<Window x:Class="Использование_кистей.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Использование_кистей"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Ellipse Margin="10" Width="200" Height="200">
            <Ellipse.Fill>
                <RadialGradientBrush x:Name="radialGradientBrush" GradientOrigin="0.3,0.3">
                    <GradientStop Color="White" Offset="0"></GradientStop>
                    <GradientStop Color="#FF00E2FF" Offset="1"></GradientStop>
                    <GradientStop Color="#FF0079FF" Offset="0.794"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <DropShadowEffect x:Name="shadowEffect" Color="Black" BlurRadius="10" Direction="0" ShadowDepth="10"/>
            </Ellipse.Effect>
        </Ellipse>
    </Grid>
</Window>